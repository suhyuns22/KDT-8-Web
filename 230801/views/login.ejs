<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <fieldset>
      <legend>로그인</legend>
      <label for="id">아이디</label><input type="text" id="idInput" required />
      <label for="pw">비밀번호</label>
      <input type="password" id="pwInput" required />
      <button type="button" onclick="axiosPost()">로그인</button>
    </fieldset>

    <div class="result"></div>

    <script>
      const resultBox = document.querySelector(".result");

      const loginData = {
        username: "ididid", // 로그인 테스트용 아이디
        password: "1234", // 로그인 테스트용 비밀번호
      };

      async function axiosPost() {
        const data = {
          id: document.getElementById("idInput").value,
          pw: document.getElementById("pwInput").value,
        };
        try {
          if (
            data.id === loginData.username &&
            data.pw === loginData.password
          ) {
            resultBox.textContent = `로그인 성공`;
            resultBox.style.color = "blue";
          } else {
            resultBox.textContent = `로그인 실패`;
            resultBox.style.color = "red";
          }
        } catch (error) {
          console.error("로그인 요청 에러:", error);
          resultBox.textContent = `로그인 실패`;
          resultBox.style.color = "red";
        }
      }
    </script>
  </body>
</html>
